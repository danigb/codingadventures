pre {
  font-size: 0.88em;
  padding-left: 0.5em;
  border-left: 1px solid #ddd;
  overflow: hidden;
  margin-bottom: 3em;
}

pre:hover {
  overflow: visible;
}

code.highlight span.c1:first-child {
  margin-left: -0.5em;
  padding: 0 1em 0 0.5em;
  border-bottom: 1px solid #ddd;
}

