---
layout: false
---
<!doctype html>
<html>
  <head>
    <title>Riotbeat: simple beat machine using blip.js and riot.js</title>
    <link href='http://fonts.googleapis.com/css?family=PT+Sans' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag 'riotbeat' %>
    <%= javascript_include_tag 'riotbeat' %>
  </head>
  <body>
    <article>
      <h1>Riotbeat</h1>
      <div id="riotbeat">
        <div class="transport">
          <button class="play disabled">▶</button>
          <button class="stop disabled">◼</button>
          <input class="tempo" type="text" value="120" />
        </div>
      </div>
      <div class="pattern">
        <div class="sequence" data-name="clave" data-sample="/assets/sounds/maeclave.wav"></div>
        <div class="sequence" data-name="hhat" data-sample="/assets/sounds/maehat1.wav"></div>
        <div class="sequence" data-name="snare" data-sample="/assets/sounds/maesnare.wav"></div>
        <div class="sequence" data-name="kick" data-sample="/assets/sounds/maekick.wav"></div>
      </div>
    </div>
  </article>
  <%= render_partial '/layouts/ga' %>
  </body>
</html>
